<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">


  <!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
<link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <title>Favourites</title>
</head>
<body>

  <%- include('_header'); %>

  <main style="margin: 1em;">
    <h3>Your Favourites</h3>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Photo</th>
          <th scope="col">Product</th>
          <th scope="col">See product</th>
          <th scope="col">Delete from Favourites</th>
        </tr>
      </thead>
      <tbody>
        <% for(let product of products) { %>
          <tr>
            <td> <img src= <%= product.thumbnail_photo %> width="200" height="200" > </td>
            <td><%= product.title %></td>
            <td><p style="background-color: transparent;" type= "button" class="btn btn-primary"><a href="/products/<%= product.product_id %>"> See product</a></p></td>

            <td><form method="POST" action="/favourites/delete">
              <input name="product_id" value="<%=product.product_id%>" type="hidden">
              <button type="submit" class="btn btn-outline-danger" name="deleteButton">
                Delete from list
              </button>
              </form>
            </td>

          </tr>
        <% } %>
      </tbody>
    </table>



<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>
